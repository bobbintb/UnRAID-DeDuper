function scan() {
  $('#scan-button').prop('disabled', true);
  $('#scanDir').prop('disabled', true);
  $('#dbDir').prop('disabled', true);
  var ansi_up = new AnsiUp;
  const eventSource = new EventSource('/plugins/bobbintb.system.dedupe/include/scan.php');
  eventSource.onmessage = function(event) {
    const data = JSON.parse(event.data);
    if (event.data.includes("completed")) {
        eventSource.close();
        localStorage.setItem('daemonLinesContent', $('#daemonLines').html());
        refresh();
        return;
    }
    var html = ansi_up.ansi_to_html(data);
    $('#daemonLines').html($('#daemonLines').html() + html).scrollTop($('#daemonLines')[0].scrollHeight);
};
}

function deleteDB() {
  var confirmed = confirm('Are you sure you want to delete the database? This action cannot be undone.');
  if (confirmed) {
    $('#delete-db').prop('disabled', false);
    $.ajax({
      url: '/plugins/bobbintb.system.dedupe/include/delete.php',
      method: 'GET',
      data: { filePath: '<?= realpath($cfg['dbfile']) ?>/deduper.db' },
      success: function(response) {
        console.log(response);
        console.log('<?= realpath($cfg['dbfile']) ?>/deduper.db');
      },
      error: function(xhr, status, error) {
        console.error(error);
      }
    });
  }
  refresh();
}

$(document).ready(function() {
  var storedContent = localStorage.getItem('daemonLinesContent');
  if (storedContent) {
    $('#daemonLines').html(storedContent).scrollTop($('#daemonLines')[0].scrollHeight);
    localStorage.removeItem('daemonLinesContent');
